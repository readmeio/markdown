{
  "name": "@readme/markdown",
  "description": "ReadMe's React-based Markdown parser",
  "author": "Rafe Goldberg <rafe@readme.io>",
  "version": "6.22.3",
  "main": "dist/main.node.js",
  "browser": "dist/main.js",
  "files": [
    "styles",
    "components",
    "dist"
  ],
  "scripts": {
    "build": "webpack -p",
    "lint": "eslint . --ext .jsx --ext .js",
    "pretest": "npm run lint && npm run prettier",
    "prettier": "prettier --list-different --write \"./**/**.{js,jsx}\"",
    "test": "jest --coverage --runInBand",
    "test.watch": "npm test -- --watch --coverage=false",
    "watch": "webpack -w --progress --mode development",
    "release": "npx semantic-release",
    "release.dry": "npx semantic-release --dry-run"
  },
  "dependencies": {
    "@readme/emojis": "^1.0.0",
    "@readme/syntax-highlighter": "^10.2.0",
    "@readme/variable": "^9.0.0",
    "copy-to-clipboard": "^3.3.1",
    "hast-util-sanitize": "^2.0.2",
    "hast-util-to-string": "^1.0.3",
    "lodash.kebabcase": "^4.1.1",
    "mdast-util-toc": "^5.0.3",
    "prop-types": "^15.7.2",
    "react": "^16.4.2",
    "react-dom": "^16.13.1",
    "rehype-raw": "^4.0.1",
    "rehype-react": "^5.0.0",
    "rehype-sanitize": "^3.0.1",
    "rehype-stringify": "^6.0.0",
    "remark-breaks": "^1.0.0",
    "remark-parse": "^7.0.2",
    "remark-rehype": "^7.0.0",
    "remark-slug": "^6.0.0",
    "remark-stringify": "^8.0.0",
    "unified": "^8.4.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-map": "^2.0.0",
    "unist-util-select": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-angular": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@readme/eslint-config": "^3.7.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "codemirror": "^5.58.3",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.14.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.12.0",
    "prettier": "^2.2.1",
    "sass-loader": "^7.3.1",
    "semantic-release": "^17.1.1",
    "terser-webpack-plugin": "^3.0.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2",
    "webpack-merge": "^4.2.2"
  },
  "license": "MIT",
  "homepage": "https://rdmd.readme.io",
  "repository": "https://github.com/readmeio/markdown",
  "publishConfig": {
    "registry": "http://registry.npmjs.org",
    "access": "public"
  },
  "prettier": "@readme/eslint-config/prettier",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/main.js",
        "maxSize": "400KB"
      },
      {
        "path": "dist/main.node.js",
        "maxSize": "250KB"
      }
    ]
  }
}
