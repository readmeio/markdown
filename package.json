{
  "name": "@readme/markdown",
  "description": "ReadMe's React-based Markdown parser",
  "author": "Rafe Goldberg <rafe@readme.io>",
  "version": "6.77.3",
  "main": "dist/main.node.js",
  "browser": "dist/main.js",
  "files": [
    "styles",
    "components",
    "dist"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "heroku-postbuild": "make emojis && webpack --mode production --config ./webpack.dev.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint '{components,styles}/**/*.{css,scss}'",
    "lint:js": "eslint --ext ts,tsx,js,jsx .",
    "prepare": "husky install",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.{js,jsx}\"",
    "release": "npx semantic-release",
    "release.dry": "npx semantic-release --dry-run",
    "start": "webpack serve --config ./webpack.dev.js --open --mode development",
    "test": "jest --coverage --runInBand --testPathIgnorePatterns '__tests__/browser'",
    "test.watch": "jest --watch --coverage=false --testPathIgnorePatterns '__tests__/browser'",
    "test.browser": "jest --config jest.browser.js --runInBand --testPathPattern '__tests__/browser'",
    "watch": "webpack -w --progress --mode production"
  },
  "dependencies": {
    "@readme/emojis": "^5.1.0",
    "@readme/syntax-highlighter": "^12.1.5",
    "copy-to-clipboard": "^3.3.3",
    "emoji-regex": "^10.3.0",
    "hast-util-sanitize": "^4.0.0",
    "lodash.escape": "^4.0.1",
    "lodash.kebabcase": "^4.1.1",
    "mdast-util-toc": "^5.1.0",
    "parse-entities": "^4.0.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "prop-types": "^15.8.1",
    "rehype-raw": "^5.1.0",
    "rehype-react": "^6.2.1",
    "rehype-sanitize": "^4.0.0",
    "rehype-stringify": "^6.0.0",
    "remark-breaks": "^1.0.0",
    "remark-disable-tokenizers": "^1.0.24",
    "remark-frontmatter": "^2.0.0",
    "remark-parse": "^8.0.0",
    "remark-rehype": "^8.1.0",
    "remark-slug": "^6.0.0",
    "remark-stringify": "^8.0.0",
    "unified": "^9.2.2",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-map": "^3.1.2",
    "unist-util-select": "^4.0.0",
    "unist-util-visit": "^4.1.1"
  },
  "peerDependencies": {
    "@readme/variable": "^16.0.0",
    "@tippyjs/react": "^4.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.19.4",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@hot-loader/react-dom": "^16.14.0",
    "@readme/eslint-config": "^13.5.0",
    "@readme/stylelint-config": "^6.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^12.1.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "codemirror": "^5.54.0",
    "core-js": "^3.36.0",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-puppeteer": "^10.0.1",
    "jest-image-snapshot": "^6.4.0",
    "jest-puppeteer": "^10.0.1",
    "mini-css-extract-plugin": "^2.8.1",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "puppeteer": "^22.4.0",
    "react-hot-loader": "^4.13.1",
    "regenerator-runtime": "^0.14.1",
    "sass-loader": "^14.1.1",
    "semantic-release": "^23.0.2",
    "string.prototype.trimend": "^1.0.7",
    "stylelint": "^16.2.1",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2",
    "webpack-merge": "^5.10.0"
  },
  "license": "MIT",
  "homepage": "https://rdmd.readme.io",
  "repository": "https://github.com/readmeio/markdown",
  "prettier": "@readme/eslint-config/prettier",
  "bundlewatch": {
    "files": [
      {
        "path": "dist/main.js",
        "maxSize": "450KB"
      },
      {
        "path": "dist/main.node.js",
        "maxSize": "300KB"
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "footer-max-line-length": [
        0,
        "always",
        "Infinity"
      ],
      "scope-case": [
        2,
        "never",
        "upper-case"
      ]
    }
  },
  "overrides": {
    "trim": "^1"
  }
}
